    const icons = ['üê∂', 'üê±', 'üê≠', 'üêπ', 'üê∞', 'ü¶ä', 'üêª', 'üêº'];
    let cards = [... icons, ...icons]; // Duplica o array para criar os pares 

    // Fun√ß√£o para embaralhar as cartas
    function shuffle(array) { array.sort(() => Math.random() - 0.5);
    }

    // Fun√ß√£o para criar as cartas no HTML
    function createCards() {
        shuffle(cards);
        const game=
        document.getElementById('game')
        game.innerHTML = ''; // Limpa o tabuleiro
        cards.forEach(icon => {
            const cardElement = 
            document.createElement('div');
            cardElement.classList.add('card', 'hidden');
            cardElement.textContent = icon; 
            cardElement.addEventListener('click', () => {
                // Adicione aqui a l√≥gica para virar a carta 

                cardElement.classList.toggle('hidden');
            });
            game.appendChild(cardElement);
        });
    }

